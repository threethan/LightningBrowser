<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.Standard" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">@font/poligon</item>
        <item name="android:colorPrimary">#2a2a2c</item>
        <item name="android:windowBackground">@drawable/ic_app_splash</item>
    </style>
    <style name="ThemeOverlay.ATV" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/poligon</item>
        <item name="android:colorPrimary">#2a2a2c</item>
        <item name="android:windowBackground">@drawable/ic_app_splash</item>
    </style>
    <style name="ThemeOverlay.Browser" parent="ThemeOverlay.Standard">
        <item name="android:windowBackground">@drawable/bg_meta_darker</item>
    </style>

    <style name="Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="Subtitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SettingButtonLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">#A0FFFFFF</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="ToastText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
    </style>
    <style name="dialogToast" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <color name="colorGradient0">#FFDD00</color>
    <color name="colorGradient1">#FF5C00</color>
    <color name="colorGradient2">#FF006F</color>
    <color name="colorGradient3">#A600FF</color>
    <color name="colorGradient4">#000EFF</color>
    <color name="colorGradient5">#63FF00</color>
</resources>