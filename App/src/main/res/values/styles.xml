<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ThemeOverlay.Standard" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#2a2a2c</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">@font/sansserif</item>
        <item name="android:colorPrimary">#2A2A2C</item>

        <item name="android:labelTextSize">24sp</item>
        <item name="android:textSize">16sp</item>

        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">#333</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/bkg_button</item>

    </style>

    <style name="ThemeOverlay.ATV" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/sansserif</item>
        <item name="android:colorPrimary">#2a2a2c</item>
        <item name="android:windowBackground">@drawable/ic_app_splash</item>
    </style>
    <style name="ThemeOverlay.Browser" parent="ThemeOverlay.Standard">
        <item name="android:windowBackground">@drawable/bg_meta_darker</item>
    </style>

    <style name="Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="Subtitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SettingButtonLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="ToastText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>